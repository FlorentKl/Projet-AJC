	<servlet>
		<servlet-name>dispatcher</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<!-- Configuration par fichier dispatcher-servlet.xml -->
<!-- 		<init-param> -->
<!-- 			<param-name>contextConfigLocation</param-name> -->
<!-- 			<param-value>/WEB-INF/dispatcher-servlet.xml</param-value> -->
<!-- 		</init-param> -->

		<!-- Configuration par classe -->
		<init-param>
			<param-name>contextClass</param-name>
			<param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
		</init-param>
		<!-- Indique quelle classe est utilisée -->
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>projetWeb.config.WebConfig</param-value>
		</init-param>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>	
		<!-- Nom indiqué dans <servlet-name> de la servlet concernée -->
		<servlet-name>dispatcher</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
</web-app>